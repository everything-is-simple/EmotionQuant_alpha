#!/usr/bin/env sh
set -e

HOOK_DIR="$(CDPATH= cd -- "$(dirname -- "$0")" && pwd)"
REPO_ROOT="$(CDPATH= cd -- "$HOOK_DIR/.." && pwd)"
SCRIPT_PATH="$REPO_ROOT/scripts/hooks/commit_msg.py"

if command -v python >/dev/null 2>&1; then
  python "$SCRIPT_PATH" "$1"
elif command -v py >/dev/null 2>&1; then
  py -3 "$SCRIPT_PATH" "$1"
else
  echo "[commit-msg] python runtime not found"
  exit 1
fi
